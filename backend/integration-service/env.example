# Local development settings for Integration Service
DOCKER_ENV=false

# Database (local uses crm_campaigns_db)
DATABASE_URL=postgresql+asyncpg://postgres:admin@localhost:5432/crm_campaigns_db

# Redis
REDIS_URL=redis://localhost:6379

# Service settings
SERVICE_PORT=8005
SERVICE_NAME=integration-service

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# TikTok Shop API settings
TIKTOK_APP_KEY=your-tiktok-app-key
TIKTOK_APP_SECRET=your-tiktok-app-secret
TIKTOK_CLIENT_ID=your-tiktok-client-id
TIKTOK_CLIENT_SECRET=your-tiktok-client-secret
TIKTOK_REDIRECT_URI=http://localhost:3000/creator-dashboard/settings

# Other services (for local development)
USER_SERVICE_URL=http://localhost:8000
CAMPAIGN_SERVICE_URL=http://localhost:8002
PAYMENT_SERVICE_URL=http://localhost:8004
ANALYTICS_SERVICE_URL=http://localhost:8003
SHARED_TYPES_URL=http://localhost:8006

# External services
DISCORD_BOT_TOKEN=your-discord-bot-token
SENDBLUE_API_KEY=your-sendblue-api-key
WEBHOOK_SECRET=your-webhook-secret

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8005"]

# Environment
DEBUG=true
ENVIRONMENT=development 