# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/launchpaid_users

# Security Keys
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# Email Configuration
MAIL_ENABLED=true
MAIL_FROM=your-email@gmail.com
MAIL_FROM_NAME=LaunchPAID

# Gmail SMTP Configuration (Recommended for testing)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_TLS=true

# Mailgun Configuration (Optional - for production)
# MAILGUN_API_KEY=your-mailgun-api-key
# MAILGUN_DOMAIN=launchpaid.ai

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Service URLs
CAMPAIGN_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003
PAYMENT_SERVICE_URL=http://localhost:8004
INTEGRATION_SERVICE_URL=http://localhost:8005

# Rate Limiting
RATE_LIMIT_ENABLED=true
LOGIN_RATE_LIMIT=5/minute
SIGNUP_RATE_LIMIT=3/hour
PASSWORD_RESET_RATE_LIMIT=3/hour
VERIFY_EMAIL_RATE_LIMIT=10/hour
GLOBAL_RATE_LIMIT=100/minute 