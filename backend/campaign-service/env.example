# Local development settings for Campaign Service
DOCKER_ENV=false

# Database (local uses crm_campaigns_db)
DATABASE_URL=postgresql+asyncpg://postgres:admin@localhost:5432/crm_campaigns_db

# Redis
REDIS_URL=redis://localhost:6379

# Service settings
SERVICE_PORT=8002
SERVICE_NAME=campaign-service

# Security
SECRET_KEY=your-super-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Other services (for local development)
USER_SERVICE_URL=http://localhost:8000
CAMPAIGN_SERVICE_URL=http://localhost:8002
ANALYTICS_SERVICE_URL=http://localhost:8003
PAYMENT_SERVICE_URL=http://localhost:8004
INTEGRATION_SERVICE_URL=http://localhost:8005
SHARED_TYPES_URL=http://localhost:8006

# External services
TIKTOK_SHOP_API_URL=https://api.tiktokshop.com
DISCORD_BOT_TOKEN=your-discord-bot-token
SENDBLUE_API_KEY=your-sendblue-api-key
STRIPE_SECRET_KEY=your-stripe-secret-key
FANBASIS_API_KEY=your-fanbasis-api-key

# Rate limiting
RATE_LIMIT_ENABLED=true
GLOBAL_RATE_LIMIT=200/minute

# CORS
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","http://localhost:3001"]

# Environment
DEBUG=true
ENVIRONMENT=development 